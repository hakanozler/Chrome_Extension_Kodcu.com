{
  "name": "Kodcu.com Haberler",
  "manifest_version": 2,
  "version": "2.2.7",

  "description": "Kodcu.com Haberlerine Daha Yakınsınız",
  "icons": 		{ 
	"128": "images/d_icon.png" 
  },
  
  "permissions": [
  "tabs","bookmarks","http://www.kodcu.com/feed",
  "http://*/*","*://*/*",
  "https://*/*"],

  "background": { "scripts": ["background.js"] },
  "background": { "page": "background.html"},

  "browser_action": {
    "default_title": "Kodcu.com | Değer Katan Bilgiler",
    "default_icon": "images/icon.png",
    "default_popup": "listofarticles.html"
  },
  "omnibox": { "keyword" : "kodcu" }
}